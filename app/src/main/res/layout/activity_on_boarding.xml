<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".onboarding.OnBoardingActivity">

    <ImageView
        android:id="@+id/img_now_playing"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/now_playing"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to MOV"
        android:layout_below="@id/img_now_playing"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/txt_welcome"/>

    <TextView
        android:id="@+id/txt_watch"
        android:layout_marginTop="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch everything you want\nfor free!"
        android:layout_below="@id/txt_welcome"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Enter now"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:gravity="center"
        android:background="@drawable/button_primary"
        android:textSize="16sp"
        android:layout_below="@+id/txt_watch"
        android:layout_marginTop="100dp"
        android:id="@+id/btn_enter_now"/>




</RelativeLayout>